<html>
    <head>
        <script src="/socket.io/socket.io.js" type="text/javascript"></script>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
        <script type="text/javascript">

            whiteCards = [];

            sio = io.connect('http://yare.us:8081/');
            sio.on('data', function (data) {
                console.log(data);
            });

            sio.on('error', function (reason){
              console.error('Unable to connect Socket.IO', reason);
            });

            sio.on('hello', function(data) {
              console.log('hello', data);
            });

            sio.on('session', function(data) {
              console.log('session', data);
            });

            sio.on('game', function(data) {
              console.log('game', data);
            });

            sio.on('whiteCard', function(data) {
              console.log('whiteCard', data);
              if (data.card) {
                  whiteCards.push(data.card);
              }
            });
            
            sio.on('blackCard', function(data) {
              console.log('blackCard', data);
            });

            sio.on('pong', function(data) {
              console.log('pong');
            });

            sio.on('connect', function (){
              console.info('successfully established a working and authorized connection');
              
            });
        </script>
    </head>
    <body>
        To the console!
    </body>
</html>
